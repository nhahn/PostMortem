<%= simple_form_for(@account, remote: true) do |f| %>
  <%= f.error_notification %>
  <h4></h4>
  <div class="form-inpus">
      <%= f.input :username %>
      <%= f.input :password %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
    <% if !@account.id.nil? %>
      <%= link_to "Delete", account_path(@account), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "button alert", remote: true %> 
    <% end %>
  </div>
<% end %>

