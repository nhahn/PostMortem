<h1>Listing account_types</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Username regex</th>
    <th>Permissions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @account_types.each do |account_type| %>
  <tr>
    <td><%= account_type.name %></td>
    <td><%= account_type.username_regex %></td>
    <td><%= account_type.permissions %></td>
    <td><%= link_to 'Show', account_type %></td>
    <td><%= link_to 'Edit', edit_account_type_path(account_type) %></td>
    <td><%= link_to 'Destroy', account_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

