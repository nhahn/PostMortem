<%= simple_form_for(@beneficiary, remote: true) do |f| %>
  <%= f.error_notification %>

  <h4></h4>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :street %>
    <%= f.input :zip, as: :string %>
    <%= f.input :city %>
    <%= f.input :state, collection: User::STATES_LIST %>
    <%= f.input :phone, as: :tel%>
    <%= f.input :email, as: :email%>
    <%= f.input :relationship %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <% if !@beneficiary.id.nil? %>
      <%= link_to "Delete", beneficiary_path(@beneficiary), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "button alert", remote: true %> 
    <% end %>
  </div>
<% end %>
